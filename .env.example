# Environment configuration
ENV=dev

# Application settings
APP_HOSTNAME=localhost
PORT=8080

# Cookie configuration
COOKIE_DOMAIN=.riscv.local

# Security - allowed hosts for redirect (CSV, lowercase, deduplicated)
ALLOWED_RETURN_HOSTS=riscv.org,*.riscv.org

# Query parameters to preserve during redirects (CSV)
ALLOWED_QUERY_PARAMS=utm_campaign,utm_source

# Intercom configuration
INTERCOM_APP_ID=your_app_id_here
INTERCOM_JWT_SECRET=dev-only-secret-string

# Auth0 configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=xxx
AUTH0_CLIENT_SECRET=xxx   # dev-only
AUTH0_REDIRECT_PATH=/callback

# Cookie signing key (hex or base64 encoded, min 32 bytes)
COOKIE_SIGNING_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Time-to-live settings
REDIRECT_TTL=30m
SESSION_TTL=24h

# Logging
LOG_LEVEL=info

# Security headers
ENABLE_HSTS=false