# Environment configuration
export ENV=dev

# Application settings
export APP_HOSTNAME=localhost
export PORT=8080

# Cookie configuration
export COOKIE_DOMAIN=.riscv.local

# Security - allowed hosts for redirect (CSV, lowercase, deduplicated)
export ALLOWED_RETURN_HOSTS=riscv.org,*.riscv.org

# Query parameters to preserve during redirects (CSV)
export ALLOWED_QUERY_PARAMS=utm_campaign,utm_source

# Intercom configuration
export INTERCOM_APP_ID=your_app_id_here
export INTERCOM_JWT_SECRET=dev-only-secret-string

# Auth0 configuration
export AUTH0_DOMAIN=your-tenant.auth0.com
export AUTH0_CLIENT_ID=xxx
export AUTH0_CLIENT_SECRET=xxx   # dev-only
export AUTH0_REDIRECT_PATH=/callback

# Cookie signing key (hex or base64 encoded, min 32 bytes)
export COOKIE_SIGNING_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Time-to-live settings
export REDIRECT_TTL=30m
export SESSION_TTL=24h

# Logging
export LOG_LEVEL=info

# Security headers
export ENABLE_HSTS=false